[user]
  name = Rick Roche
  email = richard.j.roche@gmail.com

[alias]
  ci = commit
  co = checkout
  cim = commit -m
  l = log --oneline --graph --decorate
  lg = log -p
  ls = ls-files
  pom = push origin master
  st = status
  unc = reset --soft HEAD^
  unstage = reset HEAD --

[color]
  ui = auto
  interactive = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = magenta
  untracked = bold yellow

[core]
  editor = vim
  autocrlf = input
  safecrlf = warn
  excludesfile = ~/.gitignore_global
  quotepath = false
  ignorecase = true
[push]
  default = simple